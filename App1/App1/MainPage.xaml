<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App1"
             x:Class="App1.MainPage" 
             BackgroundImage="listentoyou">
    <ContentPage.Content >
        <StackLayout Spacing="10" Padding="20,60,20,20"  >
            <Entry Placeholder="请输入用户名" PlaceholderColor="AntiqueWhite" TextColor="AntiqueWhite" Text="{Binding UserNameText}" ></Entry>
            <Entry Placeholder="请输入密码" PlaceholderColor="AntiqueWhite" TextColor="AntiqueWhite" Text="{Binding PwdText}" IsPassword="False"></Entry>
            <Button BackgroundColor="Pink" Opacity="0.7" Text="登陆"  Command="{Binding BUttonClickCommand}"></Button>
            <Button BackgroundColor="AntiqueWhite" Opacity="0.8" Text="注册" Command="{Binding REgister}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>