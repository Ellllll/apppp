<?xml version="1.0" encoding="UTF-8"?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:local="clr-namespace:App1"
                  x:Class="App1.Match"
                  BackgroundImage="blackandwhite">
    <MasterDetailPage.Master>
        <ContentPage Title="Master" BackgroundImage="blackandwhite" Padding="5,25,5,5">
            <ContentPage.Content>
                <StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <BoxView Color="Red"></BoxView>
                        <Label Text="登陆"></Label>
                    </StackLayout>
                    <Button Text="匹配"></Button>
                    <Button Text="历史纪录"></Button>
                </StackLayout>
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <ContentPage >
            <ContentPage.Content>
                <Button Text="match" BackgroundColor="AntiqueWhite" FontSize="Large" Opacity="0.8" VerticalOptions="Center" Command="{Binding ToMatch}" WidthRequest="120" HeightRequest="50"></Button>
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>